{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/build/zephyr/zephyr.elf",
      "MIMode": "gdb",
      "miDebuggerPath": "/home/vscode/zephyr-sdk-0.17.4/xtensa-espressif_esp32s3_zephyr-elf/bin/xtensa-espressif_esp32s3_zephyr-elf-gdb",
      "miDebuggerServerAddress": "localhost:3333",
      "useExtendedRemote": true,
      "preLaunchTask": "Start OpenOCD Server",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "text": "-exec-file ${workspaceFolder}/build/zephyr/zephyr.elf",
          "description": "Load the target binary file.",
          "ignoreFailures": false
        }
      ]
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/zephyr/zephyr.elf",
      "args": ["target remote :50000", "monitor halt", "monitor reset"],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "miDebuggerPath": "/home/vscode/zephyr-sdk-0.17.4/xtensa-espressif_esp32s3_zephyr-elf/bin/xtensa-espressif_esp32s3_zephyr-elf-gdb",
      "debugServerPath": "/home/vscode/zephyr-sdk-0.17.4/sysroots/x86_64-pokysdk-linux/usr/bin/openocd",
      "debugServerArgs": "-f /home/vscode/project/esp32s3-bridge.cfg -f /home/vscode/zephyr-sdk-0.17.4/sysroots/x86_64-pokysdk-linux/usr/share/openocd/scripts/target/esp32s3.cfg",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "cwd": "${workspaceRoot}",
      "executable": "./build/zephyr/zephyr.elf",
      "name": "OpenOCD",
      "request": "attach",
      "type": "cortex-debug",
      "servertype": "openocd",
      "interface": "jtag",
      "serverpath": "/home/vscode/zephyr-sdk-0.17.4/sysroots/x86_64-pokysdk-linux/usr/bin/openocd",
      "configFiles": [
        "/home/vscode/project/esp32s3-bridge.cfg",
        "/home/vscode/zephyr-sdk-0.17.4/sysroots/x86_64-pokysdk-linux/usr/share/openocd/scripts/target/esp32s3.cfg"
      ],
      "searchDir": [],
      "runToEntryPoint": "main",
      "showDevDebugOutput": "vscode",
      //"device": "esp32s3",
      "gdbPath": "/home/vscode/zephyr-sdk-0.17.4/xtensa-espressif_esp32s3_zephyr-elf/bin/xtensa-espressif_esp32s3_zephyr-elf-gdb",
      "debuggerArgs": ["target remote :50000", "monitor halt", "monitor reset"]
      //"svdFile": "/home/vscode/project/openocd/STM32G431.svd"
    },
    {
      "name": "Jlink",
      "cwd": "${workspaceFolder}",
      "executable": "./build/zephyr/zephyr.elf",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "interface": "swd",
      "servertype": "jlink",
      "device": "STM32G431KB",
      "gdbPath": "/home/vscode/zephyr-sdk-0.17.4/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb",
      "showDevDebugOutput": "vscode",
      "debuggerArgs": ["target remote :2331", "monitor halt", "monitor reset"]
      //"svdFile": "/home/vscode/project/openocd/STM32G431.svd"
    }
  ]
}

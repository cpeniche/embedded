{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "command": "${command:workbench.action.files.saveAll}",
      "label": "SaveAllFiles",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "cd ~/zephyr; west flash --skip-rebuild -r jlink -d ../project/build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cd ~/zephyr; west build -p always -b nucleo_g431kb ../project/app -d ../project/build",
      "group": "build",
      "dependsOn": ["SaveAllFiles"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cd ~/zephyr; west build -p auto -b nucleo_g431kb ../project/app -d ../project/build",
      "group": "build",
      "dependsOn": ["SaveAllFiles"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
